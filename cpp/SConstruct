import os

GMOCK_DIR="/workspace/cpp/gmock-1.7.0"
GTEST_DIR=GMOCK_DIR + "/gtest"


env = Environment()
env.Append( CPPPATH=[GMOCK_DIR + "/include", GTEST_DIR + "/include", "./src", "./lib"] )

env.Program(target='./bin/function_ptr_test', source=['./test/function_ptr_test.cpp'])

env.Program(target='./bin/unittest', source=['./test/unittest.cpp', './test/functortest.cpp', GTEST_DIR + "/lib/.libs/libgtest.a", GMOCK_DIR + "/lib/.libs/libgmock.a"])
